<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--See through Status and Nav bars-->
    <style name="AppTheme.TranslucentStatusBar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/TranslucentStatusBar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
    </style>

    <style name="TranslucentStatusBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>