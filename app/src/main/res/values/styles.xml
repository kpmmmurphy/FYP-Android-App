<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Text_ActionBarTitle</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:background">@drawable/abc_tab_indicator_mtrl_alpha</item>
        <item name="android:radioButtonStyle">@style/CustomRadioButton</item>
    </style>

    <style name="AppTheme.ExtendedActionBar"></style>

    <style name="CustomRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- ActionBar title text -->
    <style name="Text_ActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!--Text Appearance-->
    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text_SensingDeviceTitle">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">52sp</item>
    </style>

    <!--SENSOR GRID ITEM-->
    <style name="Text_GridItemOutput" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">94sp</item>
        <item name="android:textColor">@color/blue_lightest</item>
    </style>

    <style name="Text_GridItemMeasurement" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue_darkest</item>
    </style>

    <style name="Text_GridItemName" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/output_normal</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Text_GridItemMaxMin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/output_normal</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <!--Default Fragment Style-->
    <style name="Default_Fragment">
        <item name="android:background">@color/fragment_background</item>
    </style>

    <!--Config Fragment Styles-->
    <style name="Config_Section">
        <item name="android:layout_marginBottom">14dp</item>
    </style>
    <style name="Config_Section_Title">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Config_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Config_Sensor_Section_Title">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Config_Item">?
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="Config_Item_Label">
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="Config_Item_Edit_Text">
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Config_Item_Edit_Text_Numeric">
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Config_Spinner">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Config_Switch">
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
    
